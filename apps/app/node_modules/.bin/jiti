#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/home/sahildev/Development/Projects/Apotza/Application/node_modules/jiti/bin/node_modules:/home/sahildev/Development/Projects/Apotza/Application/node_modules/jiti/node_modules:/home/sahildev/Development/Projects/Apotza/Application/node_modules:/home/sahildev/Development/Projects/Apotza/node_modules:/home/sahildev/Development/Projects/node_modules:/home/sahildev/Development/node_modules:/home/sahildev/node_modules:/home/node_modules:/node_modules:/home/sahildev/Development/Projects/Apotza/Application/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/home/sahildev/Development/Projects/Apotza/Application/node_modules/jiti/bin/node_modules:/home/sahildev/Development/Projects/Apotza/Application/node_modules/jiti/node_modules:/home/sahildev/Development/Projects/Apotza/Application/node_modules:/home/sahildev/Development/Projects/Apotza/node_modules:/home/sahildev/Development/Projects/node_modules:/home/sahildev/Development/node_modules:/home/sahildev/node_modules:/home/node_modules:/node_modules:/home/sahildev/Development/Projects/Apotza/Application/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../jiti/bin/jiti.js" "$@"
else
  exec node  "$basedir/../jiti/bin/jiti.js" "$@"
fi
